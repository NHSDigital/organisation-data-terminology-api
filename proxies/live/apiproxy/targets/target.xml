<TargetEndpoint name="organisation-data-terminology-api-target">
  <PreFlow>
    <Request>
      <Step>
        <Name>AssignMessage.AddAuthHeaderToken</Name>
      </Step>
    </Request>
  </PreFlow>
  <PostFlow>
    <Request>
      <Step>
        <Name>AssignMessage.RewriteTargetUrl</Name>
      </Step>
    </Request>
  </PostFlow>

  <!--
    To point to a named target server as this is how it SHOULD be implemented:
    For example:
    <HTTPTargetConnection>
      <SSLInfo>
        <Enabled>true</Enabled>
      </SSLInfo>
      <LoadBalancer>
        <Server name="organisation-data-terminology-api" />
      </LoadBalancer>
    </HTTPTargetConnection>
  -->
  <HTTPTargetConnection>
    <SSLInfo>
      <Enabled>true</Enabled>
    </SSLInfo>
    <LoadBalancer>
      <Server name="organisation-data-terminology-api" />
    </LoadBalancer>
        <Path>{targetPath}</Path>
  </HTTPTargetConnection>
  <FaultRules>
    <FaultRule name="TooBigBodyJSON">
      <Step>
        <Name>AssignMessage.TooBigBodyJSONResponse</Name>
      </Step>
      <Condition>(fault.name =| "TooBigBody") and ((request.header.Content-Type Matches "*json") or (request.queryparam._format !Matches "*xml"))</Condition>
    </FaultRule>
    <FaultRule name="TooBigBodyXML">
      <Step>
        <Name>AssignMessage.TooBigBodyXMLResponse</Name>
      </Step>
      <Condition>(fault.name =| "TooBigBody") and ((request.header.Content-Type Matches "*xml") or (request.queryparam._format Matches "*xml"))</Condition>
    </FaultRule>
  </FaultRules>
</TargetEndpoint>
